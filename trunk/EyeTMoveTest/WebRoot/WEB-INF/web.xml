<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee   http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 
  <!-- Begin 字符编码过滤器 -->
  <filter>
  	<filter-name>EncodingFilter</filter-name>
  	<filter-class>com.eyet.framework.web.filter.EncodingFilter</filter-class>
  	<init-param>
  		<param-name>encoding</param-name>
  		<param-value>UTF-8</param-value>
  </init-param>
  </filter>
  
  <filter-mapping>
  	<filter-name>EncodingFilter</filter-name>
  	<url-pattern>/*</url-pattern>
  </filter-mapping>
  <!-- End -->
  
 <servlet>
  <servlet-name>ServletCore</servlet-name>
  <servlet-class>com.eyet.framework.web.ServletCore</servlet-class>
  <init-param>
   <param-name>projectName</param-name>
   <param-value>EyeTMoveTest</param-value>
  </init-param>
  <load-on-startup>1</load-on-startup>
 </servlet>
 <servlet-mapping>
  <servlet-name>ServletCore</servlet-name>
  <url-pattern>*.move</url-pattern>
 </servlet-mapping>
 
 

  <!-- 验证码图片 --> 
  <servlet>
    <servlet-name>CheckServlet</servlet-name>
    <servlet-class>lib.util.CheckServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>CheckServlet</servlet-name>
    <url-pattern>/checkimg</url-pattern>
  </servlet-mapping>
 
 
 
 <session-config>
	<session-timeout>180</session-timeout>
</session-config>
 
 <welcome-file-list>
  <welcome-file>init.jsp</welcome-file>
 </welcome-file-list>

</web-app>
